{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "incremental": false,
    "paths": {
      "@common/*": [
        "common/*"
      ],
      "@modules/*": [
        "modules/*"
      ]
    }
  },
  "exclude": [
    "dist"
  ]
}
