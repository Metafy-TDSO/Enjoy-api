{
  "name": "eventos-v1",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p ./tsconfig.build.json",
    "dev": "yarn prisma:generate && yarn nodemon --watch 'src/' --exec 'yarn ts-node -r tsconfig-paths/register --files src/server.ts' -e ts",
    "start": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/server.js",
    "typecheck": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts --fix",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "prisma:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "prisma:migrate:init": "prisma migrate dev --name init",
    "studio": "prisma studio"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@eslint/create-config": "^0.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@prisma/client": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "date-fns": "^2.28.0",
    "fastify": "^3.28.0",
    "fastify-cors": "^6.0.3",
    "fastify-helmet": "^7.0.1",
    "fastify-socket.io": "^3.0.0",
    "fastify-swagger": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "pino-pretty": "^7.6.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.4.1"
  }
}
